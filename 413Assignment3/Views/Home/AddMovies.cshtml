@{
    ViewBag.Title = "Add a movie to Joel's collection";
}

@model _413Assignment3.Models.MovieResponse


<form asp-action="AddMovies" method="post">
    <div>
        <label asp-for="Category">Category</label>
        <input id="Category" asp-for="Category" />
    </div>
    <div>
        <label asp-for="Title">Title</label>
        <input id="Title" asp-for="Title"/>
    </div>
    <div>
        <label asp-for="Year">Year</label>
        <input id="Year" asp-for="Year" />
    </div>
    <div>
        <label asp-for="Director">Director</label>
        <input id="Director" asp-for="Director"/>
    </div>
    <div>
        <label asp-for="Rating">Rating</label>
        <select id="Rating" asp-for="Rating">
            <option value=""></option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div>
        <label asp-for="Edited">Edited</label>
        <select id="Edited" asp-for="Edited">
            <option value=""></option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div>
        <label asp-for="LentTo">Lent To</label>
        <input id="LentTo" asp-for="LentTo"/>
    </div>
    <div>
        <label asp-for="Notes">Notes</label>
        <input id="Notes" asp-for="Notes"/>
    </div>

    <button id="submit" type="submit">Add your movie</button>
    <div asp-validation-summary="All"></div>

</form>
